---
let projects;
Astro.request.url.includes("projects") ? (projects = true) : false;
---

<header
    class="fixed w-full 2xl:h-24 h-14 bg-gradient-to-b from-slate-50/10 to-fuchsia-400/20 backdrop-blur-[2px] shadow-2xl z-50 border-b border-gray-200/10 font-extralight text-sm"
>
    <nav class="flex justify-evenly w-full">
        <a
            class="bg-transparent 2xl:h-24 h-14 w-full transition-colors ease-in-out duration-500 hover:bg-gradient-to-r from-transparent via-white/5 to-transparent border-r border-gray-300/10 shadow-2xl"
            href="/"
        >
            <div
                class={`${!projects && "text-white/70"} 2xl:text-3xl flex flex-column justify-center items-center h-full w-full transition ease-in-out delay-100 hover:scale-110`}
            >
                Home
            </div>
        </a>
        <a
            class="bg-transparent 2xl:h-24 h-14 w-full transition-colors ease-in-out duration-500 hover:bg-gradient-to-r from-transparent via-white/5 to-transparent border-r border-gray-300/10 shadow-2xl"
            href="/projects"
        >
            <div
                class={`${projects && "text-white/70"} 2xl:text-3xl flex flex-column justify-center items-center h-full w-full transition ease-in-out delay-100 hover:scale-110`}
            >
                Projects
            </div>
        </a>
    </nav>
</header>
<style>
    header {
        font-family: "Onest Variable", sans-serif;
    }
</style>
