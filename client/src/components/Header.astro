---
let projects;
Astro.request.url.includes("projects") ? (projects = true) : false;
---

<header
    class="fixed w-full text-white h-14 bg-gradient-to-b from-slate-50/10 to-fuchsia-400/20 backdrop-blur-[2px] shadow-2xl z-50 border-b border-gray-200/10 font-extralight text-sm"
>
    <nav class="flex justify-evenly w-full">
        {
            projects ? (
                <a
                    class="bg-transparent h-14 w-full transition-colors ease-in-out duration-500 hover:bg-gradient-to-r from-transparent via-white/5 to-transparent border-r border-gray-300/10 shadow-2xl"
                    href="/"
                >
                    <div class="lg:text-base text-sm flex flex-column justify-center items-center h-full w-full transition ease-in-out delay-100 hover:scale-110">
                        Home
                    </div>
                </a>
            ) : (
                <div class="bg-transparent h-14 w-full  border-gray-300/10 shadow-2xl">
                    <div
                        class={`${!projects && "text-white/70 cursor-not-allowed"} lg:text-base text-sm flex flex-column justify-center items-center h-full w-full`}
                    >
                        Home
                    </div>
                </div>
            )
        }
        {
            !projects ? (
                <a
                    class="bg-transparent h-14 w-full transition-colors ease-in-out duration-500 hover:bg-gradient-to-r from-transparent via-white/5 to-transparent border-r border-gray-300/10 shadow-2xl"
                    href="/projects"
                >
                    <div class="lg:text-base text-sm flex flex-column justify-center items-center h-full w-full transition ease-in-out delay-100 hover:scale-110">
                        Projects
                    </div>
                </a>
            ) : (
                <div class="bg-transparent h-14 w-full  border-gray-300/10 shadow-2xl">
                    <div
                        class={`${projects && "text-white/70 cursor-not-allowed"} lg:text-base text-sm flex flex-column justify-center items-center h-full w-full`}
                    >
                        Projects
                    </div>
                </div>
            )
        }
    </nav>
</header>
<style>
    header {
        font-family: "Onest Variable", sans-serif;
    }
</style>
