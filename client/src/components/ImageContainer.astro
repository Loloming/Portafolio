        class="border-2 border-fuchsia-500/50"
        loading="eager"
        src={myImage}
        alt="Profile pic"
    />
    <div
        class="flex flex-row justify-center gap-12 w-full m-2 bg-gradient-to-r from-transparent via-fuchsia-500/10 to-transparent"
    >
        <a
            href="https://github.com/Loloming"
            class="transition ease-in-out hover:-translate-y-[2px]"
        >
            <svg
                class="size-10"
                fill="#fff"
                xmlns="http://www.w3.org/2000/svg"
                x="0px"
                y="0px"
                viewBox="0 0 64 64"
            >
