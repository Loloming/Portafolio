---
interface Props {
    content: string;
}

const { content } = Astro.props;
---

<section
    class="flex justify-center self-center mt-5 bg-gradient-to-b from-slate-50/10 to-fuchsia-400/20 backdrop-blur-[2px] w-3/4 h-min rounded-3xl"
>
    <h2 class="text-4xl text-white">{content}</h2>
</section>
<style>
    section h2 {
        font-family: "Pixelify Sans Variable", system-ui;
    }
</style>
