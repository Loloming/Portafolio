---
interface Props {
	title: string;
}

import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ParticleBackground from "../components/ParticleBackground.astro";
import { getImage } from "astro:assets";
import { ViewTransitions } from "astro:transitions";
import myImage from "../../public/background_pattern.png";

const backgroundImage = await getImage({ src: myImage });

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<div
			style={`background-image: url('${backgroundImage.src}')`}
			class="background-image"
		>
		</div>
		<ParticleBackground />
		<Header />
		<div class="flex min-h-screen" transition:animate="initial">
			<slot />
		</div>
		<Footer />
		<style is:global>
			:root {
				color-scheme: light dark;
			}
			html {
				font-family: system-ui, sans-serif;
				scroll-behavior: smooth;
			}
			body {
				display: flex;
				position: relative;
				flex-direction: column;
				overflow-x: hidden;
				margin: 0 auto;
				width: 100%;
				min-height: 100vh;
				background-repeat: no-repeat;
				background-color: #6c0093;
				background: -moz-linear-gradient(
					142deg,
					rgba(16, 0, 32, 1) 0%,
					rgba(91, 1, 131, 1) 28%,
					rgba(24, 3, 40, 0.9523459896653974) 43%,
					rgba(41, 10, 65, 1) 100%
				);
				background: -webkit-linear-gradient(
					142deg,
					rgba(16, 0, 32, 1) 0%,
					rgba(91, 1, 131, 1) 28%,
					rgba(24, 3, 40, 0.9523459896653974) 43%,
					rgba(41, 10, 65, 1) 100%
				);
				background: linear-gradient(
					142deg,
					rgba(16, 0, 32, 1) 0%,
					rgb(124, 1, 176) 28%,
					rgb(24, 3, 40) 43%,
					rgb(52, 13, 83) 100%
				);
				filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#100020",endColorstr="#290a41",GradientType=1);
			}
			.background-image {
				position: absolute;
				content: "";
				top: 0;
				left: 0;
				width: 100%;
				min-height: 100%;
				/* background-image: url("${optimizedBackgroundImage.src}"); */
				background-position: center;
				background-size: cover;
				background-repeat: repeat;
				opacity: 0.08; /* Opacidad de la imagen de fondo */
				z-index: -50; /* Colocar la imagen detr√°s de todo */
			}

			@media (prefers-reduced-motion: reduce) {
				html {
					scroll-behavior: auto;
				}
			}
		</style>
	</body>
</html>
