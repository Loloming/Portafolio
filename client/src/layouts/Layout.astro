---
interface Props {
	title: string;
}

import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import ParticleBackground from "../components/ParticleBackground.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<ParticleBackground />
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		/* height: 100%; */
	}
	html {
		font-family: system-ui, sans-serif;
	}
	body {
		display: flex;
		flex-direction: column;
		overflow-x: hidden;
		margin: 0 auto;
		width: 100%;
		background-repeat: no-repeat;
		background-color: #6c0093;
		background: -moz-linear-gradient(
			142deg,
			rgba(16, 0, 32, 1) 0%,
			rgba(91, 1, 131, 1) 28%,
			rgba(24, 3, 40, 0.9523459896653974) 43%,
			rgba(41, 10, 65, 1) 100%
		);
		background: -webkit-linear-gradient(
			142deg,
			rgba(16, 0, 32, 1) 0%,
			rgba(91, 1, 131, 1) 28%,
			rgba(24, 3, 40, 0.9523459896653974) 43%,
			rgba(41, 10, 65, 1) 100%
		);
		background: linear-gradient(
			142deg,
			rgba(16, 0, 32, 1) 0%,
			rgba(91, 1, 131, 1) 28%,
			rgba(24, 3, 40, 0.9523459896653974) 43%,
			rgba(41, 10, 65, 1) 100%
		);
		filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#100020",endColorstr="#290a41",GradientType=1);
	}
</style>
